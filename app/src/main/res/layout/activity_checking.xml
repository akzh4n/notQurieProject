<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgradient"
    tools:context=".CheckingActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/BaseCard"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/TypeofGrey"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="107.5dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/athiti"
            android:text="Secret Phrase"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_button3" />

        <EditText
            android:id="@+id/secretPhraseText"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:layout_marginStart="62.5dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/round_button2"
            android:fontFamily="@font/athiti"
            android:gravity="center_horizontal"
            android:hint="bird can fly"
            android:paddingTop="11dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="152.5dp"
            android:layout_marginTop="460dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:indeterminateDuration="10000"
            android:progressBackgroundTint="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/goBtn"
            android:layout_width="200dp"
            android:layout_height="36.5dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/athiti"
            android:gravity="center_horizontal"
            android:paddingTop="2.5dp"
            android:text="GO"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="147.5dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/metamask_icon" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>